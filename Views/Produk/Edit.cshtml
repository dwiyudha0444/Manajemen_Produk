@model Manajemen_Produk.Models.Produk

@{
    ViewData["Title"] = "Edit Produk";
}

<h2>Edit Produk</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nama" class="control-label"></label>
        <input asp-for="Nama" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Harga" class="control-label"></label>
        <input asp-for="Harga" class="form-control" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Simpan</button>
    <a asp-action="Index" class="btn btn-secondary">Batal</a>
</form>